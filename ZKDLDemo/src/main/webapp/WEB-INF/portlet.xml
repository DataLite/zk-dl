<?xml version='1.0' encoding='UTF-8' ?>
<portlet-app xmlns='http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd' xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance' xsi:schemaLocation='http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd' version='2.0'>

	<portlet>
		<description>ZKDLDemo</description>
		<portlet-name>ZKDLDemo</portlet-name>
		<display-name>ZKDLDemo</display-name>
		<portlet-class>cz.datalite.zk.liferay.DLPortlet</portlet-class>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
		</supports>
		<portlet-info>
			<title>ZKDLDemo</title>
			<short-title>ZKDLDemo</short-title>
		</portlet-info>
               <portlet-preferences>
                   <preference>
                      <name>zk_page</name>
                      <value>/preview.zul</value>
                   </preference>
               </portlet-preferences>
               <supported-public-render-parameter>demoType</supported-public-render-parameter>
	</portlet>
        <public-render-parameter>
            <identifier>demoType</identifier>
            <qname xmlns:n="http://www.datalite.cz/">n:demoType</qname>
        </public-render-parameter>

</portlet-app>
