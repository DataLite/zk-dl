<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?xel-method prefix="zkdl" name="i" class="cz.datalite.helpers.ZKDLResourceResolver" signature="java.lang.String resolveImage(java.lang.String)"?>

<?page title="Listbox profile edit"?>

<zk xmlns="http://www.zkoss.org/2005/zul" xmlns:n="native">
    <window apply="org.zkoss.bind.BindComposer" 
            viewModel="@id('vm') @init('cz.datalite.zk.components.list.window.controller.ListboxProfileEditController')"
            closable="true" id="listboxProfileEditWindow" title="Editace profilu" border="normal" width="460px" 
            sclass="window">  
    	
    	<vlayout form="@id('fx') @load(vm.profile) @save(vm.profile, before='save')" sclass="editable padding10">
    	
        	<grid sclass="margin-bottom10" width="99.4%">
	            <columns>
	                <column width="120px" />
	                <column />
	            </columns>
	            <rows>
	                <row>
	                    <label value="${c:l('listbox.profileManager.profile.name')}" />
	                    <textbox value="@bind(fx.name)" width="98%" constraint="no empty" maxlength="16"/>
	                </row>
	                <row>
	                	<label value="${c:l('listbox.profileManager.profile.type')}" />
	                    <radiogroup selectedItem="@bind(fx.publicProfile) @converter(vm.booleanConverter)">	 
	                    	<vlayout>                   	
	                    		<radio label="${c:l('listbox.profileManager.profile.public')}" value="true" />
	                    		<radio label="${c:l('listbox.profileManager.profile.private')}" value="false" />
	                    	</vlayout>
	                    </radiogroup>	                    
	                </row>
	                <row>
	                    <label value="${c:l('listbox.profileManager.profile.default')}" />
	                    <checkbox checked="@bind(fx.defaultProfile)" width="90%" />
	                </row>
	            </rows>
	        </grid>
                
	        <grid sclass="margin-bottom10" width="99.4%">
	            <columns>
	                <column />
	                <column />
	            </columns>
	            <rows>
	                <row>
	                    <label value="${c:l('listbox.profileManager.profile.saveColumnModel')}" />
	                    <checkbox id="saveColumnModelCheckbox" checked="true" width="90%" disabled="@load(empty fx.id)"/>
	                </row>
	                <row>
	                    <label value="${c:l('listbox.profileManager.profile.saveFilterModel')}" />
	                    <checkbox id="saveColumnFilterCheckbox" checked="true" width="90%" disabled="@load(empty fx.id)"/>
	                </row>
	            </rows>
	        </grid>
	        
	        <div sclass="fr">
	        	<button label="${c:l('listbox.profileManager.delete')}" onClick="@command('delete')" />            	
            	<button label="${c:l('listbox.profileManager.save')}" onClick="@command('save', saveColumnModel=saveColumnModelCheckbox.checked, saveFilterModel=saveColumnFilterCheckbox.checked)" />
            	<button label="${c:l('listbox.storno')}" onClick="@command('close')" />
        	</div>
                
                <n:br class="clear" />
        		        
        </vlayout>      
    </window>
</zk>